startup_message off
altscreen on
defbce on
shelltitle "$ |bash"
term 'screen-s'

# Bump up the size of the scroll back buffer.
scrollback 50000

# 256 color xterm support
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
attrcolor b ".I"

hardstatus alwayslastline                                                                                                                          

# Host | load avg | date time | windows
hardstatus string '%{bk}%{w} %H %{y}|%{G} %l %{y}|%{W} %d/%m %c %{y}|%{W} %-w%{+u}%n %t%{-u}%+w'

# Always send backspace as ^?, which is consistent with the bundled terminfo
bindkey -k kb stuff ^?

# Because nethack is awesome
nethack on
