# vim:ft=muttrc

# Mailbox settings
set folder="$HOME/Mail/Links"
set record="=Sent"
set postponed="=Drafts"
set spoolfile="=Inbox"
set mbox="=Inbox"

# Use custom sendmail?
#set sendmail="$HOME/bin/sendmail.py"

# Header caching
set header_cache="$HOME/.mutt/header_cache"

# Speed up the loading of folders.
# Note: If you have *ANY* programs that modify the maildir behind your back, disable this
# The only applications that touch my maildir are mutt & offlineimap
set maildir_header_cache_verify=no

# List of mailboxes
mailboxes =Inbox =Junk

# List of email addresses
alternates ^me@example.com$ ^me@example.org$

